keywords = {Clay mineralogy,Geochemistry,GreenhoTriassic–Jurassic boundary,Pakistan},
pages = {15--32},
title = {{Hot-house climate during the Triassic/Jurassic transition: The evidence of climate change from the southern hemisphere (Salt Range, Pakistan)}},
volume = {172},
year = {2019}
}
