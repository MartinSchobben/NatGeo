doi = {10.1016/j.epsl.2015.11.017},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Cao et al. - 2015 - Constraining the oceanic barium cycle with stable barium isotopes.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Nutrient-like fractionation,Oceanic Ba dynamics,Proxy,Seawater Ba isotopes,Water mass mixing},
pages = {1--9},
publisher = {Elsevier B.V.},
title = {{Constraining the oceanic barium cycle with stable barium isotopes}},
url = {http://dx.doi.org/10.1016/j.epsl.2015.11.017},
