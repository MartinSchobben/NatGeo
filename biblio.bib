file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Kent, Olsen - 1996 - Milankovitch climate forcing in the tropics of Pangea during the Late Triassic.pdf:pdf},
journal = {Palaeogeography, Palaeoclimatology, and Palaeoecology},
number = {1-4},
pages = {1--26},
title = {{Milankovitch climate forcing in the tropics of Pangea during the Late Triassic}},
url = {http://www.google.com/search?client=safari{\&}rls=en-us{\&}q=Milankovitch+climate+forcing+in+the+tropics+of+Pangea+during+the+Late+Triassic{\&}ie=UTF-8{\&}oe=UTF-8{\%}5Cnpapers2://publication/uuid/1E82AAB7-6AF8-4F43-A030-EAC9DB3E0B3C},
