doi = {10.1130/G38412.1},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/M{\"{a}}rz et al. - 2016 - Repeated enrichment of trace metals and organic carbon on an Eocene high-energy shelf caused by anoxia and reworki.pdf:pdf},
