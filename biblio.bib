issn = {00092541},
journal = {Chemical Geology},
keywords = {Black Sea,Hydrogen sulfide,Sulfur isotopes,Water column},
number = {1-2},
pages = {59--69},
title = {{Sulfur isotope geochemistry of the Black Sea water column}},
