file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Grice et al. - 2010 - An integrated biomarker, isotopic and palaeoenvironmental study through the Late Permian event at Lusitaniadalen,.pdf:pdf;:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Nabbefeld et al. - 2010 - An integrated biomarker, isotopic and palaeoenvironmental study through the Late Permian event at Lusitaniadal.pdf:pdf},
