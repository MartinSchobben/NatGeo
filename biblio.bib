journal = {Global and Planetary Change},
keywords = {Microbial sulfate reduction,Oxygen isotope,Pyrite,Sulfur isotope},
pages = {82--90},
publisher = {Elsevier B.V.},
title = {{Microbial sulfur metabolism evidenced from pore fluid isotope geochemistry at Site U1385}},
