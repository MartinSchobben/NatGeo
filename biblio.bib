file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Paper - 2006 - Petrography and biosedimentology of the Rosso Ammonitico Veronese (middle-upper Jurassic, north-eastern Italy).pdf:pdf},
issn = {0172-9179},
journal = {Facies},
keywords = {bioprecipitation,diagenesis,jurassic,micrite,pigmentation,rosso ammonitico},
month = {feb},
number = {2},
pages = {265--278},
title = {{Petrography and biosedimentology of the Rosso Ammonitico Veronese (middle-upper Jurassic, north-eastern Italy)}},
url = {http://link.springer.com/10.1007/s10347-005-0032-2},
