journal = {Geochimica et Cosmochimica Acta},
keywords = {Anoxia,Mass extinction,Permo-Triassic,U isotopes},
pages = {162--172},
publisher = {Elsevier Ltd},
title = {{Uranium isotope fractionation induced by aqueous speciation: Implications for U isotopes in marine CaCO3 as a paleoredox proxy}},
url = {http://dx.doi.org/10.1016/j.gca.2017.08.006},
volume = {215},
year = {2017}
