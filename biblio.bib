issn = {16737385},
journal = {Frontiers of Earth Science in China},
keywords = {Carbon cycle,Carbon isotope,Organic burial,Permian-Triassic boundary},
number = {4},
pages = {425--430},
title = {{Organic fraction of the total carbon burial flux deduced from carbon isotopes across the Permo-Triassic boundary at Meishan, Zhejiang Province, China}},
