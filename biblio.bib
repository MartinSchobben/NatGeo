isbn = {0025-3227},
issn = {00253227},
journal = {Marine Geology},
keywords = {3D seismic,BSR,EM12,backscatter imagery,canyon,chimneys,diapirs,faults,fluid seeps,gas hydrates,leakage,pipes,pockmarks,polygonal faults,seepage,turbiditic channels},
