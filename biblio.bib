doi = {10.1038/s41598-017-18629-8},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Heimdal et al. - 2018 - Large-scale sill emplacement in Brazil as a trigger for the end-Triassic crisis.pdf:pdf},
issn = {20452322},
journal = {Scientific Reports},
number = {1},
pages = {1--12},
title = {{Large-scale sill emplacement in Brazil as a trigger for the end-Triassic crisis}},
volume = {8},
year = {2018}
}
