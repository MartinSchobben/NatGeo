doi = {10.1016/j.gca.2008.12.015},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Dale et al. - 2009 - An integrated sulfur isotope model for Namibian shelf sediments.pdf:pdf},
isbn = {0016-7037},
