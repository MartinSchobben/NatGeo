journal = {Earth and Environmental Science Transactions of the Royal Society of Edinburgh},
keywords = {Adaptation,Aerobic scope,Articulated brachiopods,Growth,Life history,Metabolism,Migration,Survival},
number = {3-4},
pages = {451--456},
title = {{Brachiopods and climate change}},
volume = {98},
