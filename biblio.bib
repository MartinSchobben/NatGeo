file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Bachan et al. - 2017 - A model for the decrease in amplitude of carbon isotope excursions across the phanerozoic.pdf:pdf},
issn = {00029599},
journal = {American Journal of Science},
keywords = {Carbon cycle,Carbon isotopes,Global biogeochemical cycles,Linear systems,Marine carbonates},
number = {6},
pages = {641--676},
title = {{A model for the decrease in amplitude of carbon isotope excursions across the phanerozoic}},
volume = {317},
