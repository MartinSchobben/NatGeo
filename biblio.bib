issn = {19432674},
journal = {Bulletin of the Geological Society of America},
number = {7-8},
pages = {771--787},
title = {{Lower Cretaceous cold snaps led to widespread glendonite occurrences in the Sverdrup Basin, Canadian High Arctic}},
