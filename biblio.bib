journal = {Nature},
keywords = {Ancient,Animals,Atmosphere,Atmosphere: chemistry,Carbon,Carbon Isotopes,Carbon: analysis,Geologic Sediments,Geologic Sediments: chemistry,History,Oceans and Seas,Oxidation-Reduction,Oxygen,Oxygen: analysis,Oxygen: metabolism,Plankton,Plankton: metabolism,Seawater,Seawater: chemistry,Sulfur,Sulfur Isotopes,Sulfur: analysis},
