doi = {10.1016/j.gca.2015.09.012},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Egger et al. - 2015 - Vivianite is a major sink for phosphorus in methanogenic coastal surface sediments.pdf:pdf},
isbn = {0016-7037},
