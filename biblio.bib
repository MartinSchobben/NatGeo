file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Dennis et al. - 2011 - Defining an absolute reference frame for ‘clumped' isotope studies of CO2.pdf:pdf},
issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
month = {nov},
number = {22},
pages = {7117--7131},
publisher = {Elsevier Ltd},
title = {{Defining an absolute reference frame for ‘clumped' isotope studies of CO2}},
