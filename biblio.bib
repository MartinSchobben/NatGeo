keywords = {carbon cycle,carbon isotopes,ecocene,gashydrates,global change,methane,paleocene,phanerozoic},
month = {aug},
number = {3-4},
pages = {169--183},
title = {{Rethinking the global carbon cycle with a large, dynamic and microbially mediated gas hydrate capacitor}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0012821X0300325X},
