file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Minyuk et al. - 2013 - High-temperature thermomagnetic properties of vivianite nodules, Lake El'gygytgyn, Northeast Russia.pdf:pdf},
issn = {18149324},
journal = {Climate of the Past},
number = {1},
