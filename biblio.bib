doi = {10.1127/njgpa/2017/0651},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Korte et al. - 2017 - Brachiopod biogeochemistry and isotope stratigraphy from the Rhaetian Eiberg section in Austria potentials and lim.pdf:pdf},
issn = {0077-7749},
journal = {Neues Jahrbuch f?r Geologie und Pal?ontologie - Abhandlungen},
keywords = {brachiopods,carbon isotopes,isotope stratigraphy,northern calcareous alps,rhaetian},
number = {2},
