file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Vickers et al. - 2016 - Stratigraphic and geochemical expression of Barremian-Aptian global climate change in Arctic Svalbard.pdf:pdf},
issn = {1553040X},
journal = {Geosphere},
number = {5},
pages = {1594--1605},
title = {{Stratigraphic and geochemical expression of Barremian-Aptian global climate change in Arctic Svalbard}},
volume = {12},
year = {2016}
}
