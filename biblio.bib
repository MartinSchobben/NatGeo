file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ruhl, Veld, K{\"{u}}rschner - 2010 - Sedimentary organic matter characterization of the Triassic-Jurassic boundary GSSP at Kuhjoch (Austria).pdf:pdf;:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ruhl, Veld, K{\"{u}}rschner - 2010 - Sedimentary organic matter characterization of the Triassic-Jurassic boundary GSSP at Kuhjoch (Austria).xls:xls},
