file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/L{\"{u}}ckge et al. - 1999 - Early diagenetic alteration of organic matter by sulfate reduction in Quaternary sediments from the northeastern.pdf:pdf},
isbn = {0025-3227},
issn = {00253227},
journal = {Marine Geology},
keywords = {Arabian Sea,anaerobic environment,degradation,marine sediments,nitrogen,organic matter,phosphorus},
number = {1-4},
pages = {1--13},
title = {{Early diagenetic alteration of organic matter by sulfate reduction in Quaternary sediments from the northeastern Arabian Sea}},
