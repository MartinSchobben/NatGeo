doi = {10.1130/G32928.1},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Lindstr{\"{o}}m et al. - 2012 - No causal link between terrestrial ecosystem change and methane release during the end-Triassic mass extincti.pdf:pdf},
