file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Lindeque et al. - 2011 - Deep crustal profile across the Southern Karoo basin and beattie magnetic anomaly, South Africa An integrated i.pdf:pdf},
issn = {10120750},
journal = {South African Journal of Geology},
number = {3-4},
pages = {265--292},
title = {{Deep crustal profile across the Southern Karoo basin and beattie magnetic anomaly, South Africa: An integrated interpretation with tectonic implications}},
