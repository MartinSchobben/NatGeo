doi = {10.1111/gbi.12112},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Boller et al. - 2015 - Isotopic discrimination and kinetic parameters of RubisCO from the marine bloom-forming diatom, Skeletonema costa.pdf:pdf},
