file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Tanner, Lucas, Chapman - 2004 - Assessing the record and causes of Late Triassic extinctions.pdf:pdf},
isbn = {0012-8252},
issn = {00128252},
journal = {Earth-Science Reviews},
keywords = {Bolide impact,Climate change,Flood basalt,Mass extinction,Sea-level change},
number = {1-2},
pages = {103--139},
title = {{Assessing the record and causes of Late Triassic extinctions}},
