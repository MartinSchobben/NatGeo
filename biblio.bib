file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Hijmans et al. - 2005 - Very high resolution interpolated climate surfaces for global land areas.pdf:pdf},
issn = {08998418},
journal = {International Journal of Climatology},
keywords = {ANUSPLIN,Climate,Error,GIS,Interpolation,Precipitation,Temperature,Uncertainty},
month = {dec},
number = {15},
pages = {1965--1978},
title = {{Very high resolution interpolated climate surfaces for global land areas}},
