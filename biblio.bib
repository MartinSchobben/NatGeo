file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Taylor, Wilson - 2003 - Palaeoecology and evolution of marine hard substrate communities.pdf:pdf},
isbn = {0012-8252},
