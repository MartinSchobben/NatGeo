keywords = {Cyclotosaurus,Formaci{\'{o}}n Exter,Paleohistology,Rhaetic bonebed,Temnospondyli},
number = {2},
pages = {287--300},
publisher = {Springer International Publishing},
title = {{A large temnospondyl humerus from the Rhaetian (Late Triassic) of Bonenburg (Westphalia, Germany) and its implications for temnospondyl extinction}},
