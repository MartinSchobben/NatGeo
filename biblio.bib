issn = {09218181},
journal = {Global and Planetary Change},
keywords = {Early Triassic,South China,anachronistic facies,carbonate fluorapatite (CFA),giant ooids},
month = {jun},
pages = {102--120},
publisher = {Elsevier B.V.},
title = {{Paleoceanographic conditions following the end-Permian mass extinction recorded by giant ooids (Moyang, South China)}},
