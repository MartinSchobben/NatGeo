keywords = {Biogenic magnetic minerals,Environmental magnetism},
number = {3},
pages = {941--948},
title = {{Raman spectroscopy of iron oxides and (oxy)hydroxides at low laser power and possible applications in environmental magnetic studies}},
volume = {177},
year = {2009}
}
