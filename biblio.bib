number = {1-2},
pages = {147--162},
title = {{Mantle plume: The invisible serial killer — Application to the Permian–Triassic boundary mass extinction}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0031018208002150},
volume = {264},
year = {2008}
}
