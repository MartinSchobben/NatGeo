title = {{Biostratigraphy and event stratigraphy in Iran around the Permian–Triassic Boundary (PTB): Implications for the causes of the PTB biotic crisis}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0921818106001688},
volume = {55},
year = {2007}
}
@article{Canfield2009,
