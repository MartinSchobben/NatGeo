file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Retallack et al. - 2000 - chemostratigraphy of the Permian‐Triassic boundary in the Maitai Group, New Zealand Evidence for high‐l(2).pdf:pdf},
journal = {New Zealand Journal of Geology and Geophysics},
keywords = {maitai group,methane,permian-triassic boundary,stable carbon isotopes},
number = {1},
pages = {21--32},
title = {{chemostratigraphy of the Permian‐Triassic boundary in the Maitai Group, New Zealand: Evidence for high‐latitudinal methane release}},
volume = {43},
year = {2000}
