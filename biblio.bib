doi = {10.1016/j.epsl.2007.07.033},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Fenton et al. - 2007 - Changes in biomarker abundances and sulfur isotopes of pyrite across the Permian-Triassic (PTr) Schuchert Dal sec.pdf:pdf},
