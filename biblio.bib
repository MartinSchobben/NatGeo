doi = {10.1002/2014PA002724.Received},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Esmeray-Senlet et al. - 2015 - Evidence for reduced export productivity following the CretaceousPaleogene mass extinction.pdf:pdf},
journal = {Paleoceanography},
keywords = {and Cretaceous/Paleogene boun,carbon and oxygen isotopes,foraminifera,marine carbon cycle,productivity},
pages = {718--738},
title = {{Evidence for reduced export productivity following the Cretaceous/Paleogene mass extinction}},
