author = {{{\{}van de Schootbrugge{\}}}, Bas and Bachan, Aviv and Suan, Guillaume and Richoz, Sylvain and Payne, Jonathan L.},
doi = {10.1111/pala.12034},
file = {:home/nicola/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/{\{}van de Schootbrugge{\}} et al. - 2013 - Microbes, mud and methane Cause and consequence of recurrent early Jurassic anoxia following the e.pdf:pdf},
issn = {00310239},
journal = {Palaeontology},
keywords = {Anoxic events,Carbon cycle,Jurassic,Phytoplankton},
number = {4},
pages = {685--709},
title = {{Microbes, mud and methane: Cause and consequence of recurrent early Jurassic anoxia following the end-Triassic mass extinction}},
volume = {56},
year = {2013}
}
