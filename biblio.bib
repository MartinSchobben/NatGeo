journal = {Chemical Geology},
keywords = {Anaerobic Oxidation of Methane (AOM),Authigenic carbonate,Early diagenesis,Ediacaran Period,Neoproterozoic Oxygenation Event (NOE),Shuram Excursion,Sulfate-Methane Transition Zone (SMTZ),$\delta$13C and $\delta$18O co-variation},
