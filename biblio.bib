issn = {00092541},
journal = {Chemical Geology},
keywords = {carbonate associated sulfate,cas,pyrite,$\delta$ 34 s},
month = {jan},
number = {1-2},
pages = {124--132},
title = {{Oxidation of pyrite during extraction of carbonate associated sulfate}},
