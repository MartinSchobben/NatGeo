isbn = {0013-936X},
issn = {15205851},
journal = {Environmental Science and Technology},
number = {18},
pages = {10927--10936},
pmid = {26260047},
title = {{Influence of Coprecipitated Organic Matter on Fe2+(aq)-Catalyzed Transformation of Ferrihydrite: Implications for Carbon Dynamics}},
volume = {49},
