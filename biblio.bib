journal = {Organic Geochemistry},
keywords = {c,carbon isotopes,n ratios,nitrogen isotopes,paleoproductivity,paleotempera-,pigments,sterols,tures,ð n -alkanes},
number = {5-6},
pages = {213--250},
title = {{Organic geochemical proxies of paleoceanographic, paleolimnologic, and paleoclimatic processes}},
