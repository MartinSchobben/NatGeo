isbn = {0012-821X},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Cadmium,GEOTRACES,Isotopes,NAZT,North Atlantic,Zinc},
pages = {159--167},
publisher = {Elsevier B.V.},
title = {{A role for scavenging in the marine biogeochemical cycling of zinc and zinc isotopes}},
